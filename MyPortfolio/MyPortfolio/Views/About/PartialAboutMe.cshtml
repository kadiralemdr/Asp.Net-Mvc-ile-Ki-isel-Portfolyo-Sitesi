<section class="w3l-aboutblock1" id="about">
    <div class="midd-w3 py-5">
        <div class="container py-lg-5 py-md-3">
            <div class="row">
                <div class="col-lg-4">
                    <div class="position-relative">
                        <img src="~/Templates/alexander-starter/assets/images/1685453255846.jpg" alt="" class="radius-image img-fluid">
                    </div>
                </div>
                <div class="col-lg-8 mt-lg-0 mt-5">
                    <h5 class="title-small mb-2">Merhaba, Ben Backend Developer' ım</h5>
                    <h3 class="title-big">@ViewBag.title</h3>
                    <p class="mt-4">
                        @ViewBag.description
                    </p>
                    <div class="my-info mt-4">
                        <div class="single-info">
                            <span>Ad Soyad:</span>
                            <p>@ViewBag.nameSurname</p>
                        </div>
                        <div class="single-info">
                            <span>Yaş:</span>
                            <p>@ViewBag.age</p>
                        </div>
                        <div class="single-info">
                            <span>Şehir:</span>
                            <p>@ViewBag.city</p>
                        </div>
                        <div class="single-info">
                            <span>Mail:</span>
                            <p><a href="mailto:@ViewBag.mail">@ViewBag.mail</a></p>
                        </div>
                    </div>
                    <div class="my-social mt-lg-5 mt-4">
                        <a href="@Url.Action("Download", "Portfolio")" class="btn btn-style btn-primary mt-lg-1 mt-1">Cv İndir</a>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


