@model MyPortfolio.Models.Entities.AboutTop
@{
    ViewBag.Title = "AboutGuncelle";
    Layout = "~/Views/Shared/_PortfolioAdminLayout.cshtml";
}

<h2>Hakkımda Düzenleme</h2>

<form method="post">
    @Html.HiddenFor(x => x.AboutTopID)
    <label>İsim & Soyisim</label>
    @Html.TextBoxFor(x => x.AdSoyad, new { @class = "form-control" })
    <br />
    <label>Yaş</label>
    @Html.TextBoxFor(x => x.Age, new { @class = "form-control" })
    <br />
    <label>Şehir</label>
    @Html.TextBoxFor(x => x.Sehir, new { @class = "form-control" })
    <br />
    <label>Mail</label>
    @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
    <br />
    <label>Başlık</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    <label>Açıklama</label>
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
    <br />
    <button class="btn btn-info"> Kaydet</button>
</form>

