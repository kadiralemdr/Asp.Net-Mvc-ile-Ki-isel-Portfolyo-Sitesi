@model MyPortfolio.Models.Entities.Blog
@{
    ViewBag.Title = "BlogGuncelle";
    Layout = "~/Views/Shared/_PortfolioAdminLayout.cshtml";
}

<h2>Blog Güncelleme Sayfası</h2>
<br />
<form method="post">
    @Html.HiddenFor(x => x.BlogID)
    @Html.Label("Başlık")
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    @Html.Label("Açıklama")
    @Html.TextAreaFor(x => x.Description, new { @class = "form-control" , @rows= 15})
    <br />
    @Html.Label("Tarih")
    @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control" })
    <br />
    @Html.Label("Resim")
    <input type="file" name="ImageURL" class="form-group" />
    @*<br />
    @Html.Label("Başlık 2")
    @Html.TextBoxFor(x => x.Title1, new { @class = "form-control" })
    <br />
    @Html.Label("Açıklama 2")
    @Html.TextBoxFor(x => x.Description1, new { @class = "form-control" })*@
    <br />
    <button class="btn btn-warning">Blogu Güncelle</button>
</form>


