@model MyPortfolio.Models.Entities.Admin
@{
    ViewBag.Title = "AdminEkle";
    Layout = "~/Views/Shared/_PortfolioAdminLayout.cshtml";
}

<h2>Yeni Admin Ekleme Sayfası</h2>
<br />
@using (Html.BeginForm("AdminEkle", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.Label("Kullanıcı Adı")
    @Html.TextBoxFor(x => x.Username, new { @class = "form-control" })
    <br />
    @Html.Label("Şifre")
    @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
    <br />
    <input type="submit" value="Kaydet" class="btn btn-outline-success" />
}


